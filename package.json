{
  "name": "omnishield-protocol",
  "version": "1.0.0",
  "description": "OmniShield - A DeFi Insurance Protocol with Cross-Chain Support",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/**/*.ts",
    "test:integration": "hardhat test test/integration/**/*.ts",
    "test:e2e": "hardhat test test/e2e/**/*.ts",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy/deploy.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy/deploy.ts --network ethereum-sepolia",
    "deploy:hedera": "hardhat run scripts/deploy/deploy.ts --network hedera-testnet",
    "deploy:polygon": "hardhat run scripts/deploy/deploy.ts --network polygon-amoy",
    "deploy:all": "NETWORKS=sepolia,hedera,polygon hardhat run scripts/deploy/deploy-all-chains.ts",
    "verify:sepolia": "hardhat verify --network ethereum-sepolia",
    "verify:hedera": "hardhat verify --network hedera-testnet",
    "verify:polygon": "hardhat verify --network polygon-amoy",
    "verify:all": "NETWORKS=sepolia,hedera,polygon hardhat run scripts/deploy/verify-all.ts",
    "upgrade": "hardhat run scripts/deploy/upgrade-contracts.ts",
    "emergency:pause": "hardhat run scripts/emergency/pause-all.ts",
    "emergency:unpause": "ACTION=unpause hardhat run scripts/emergency/pause-all.ts",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "typechain": "hardhat typechain",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --ext .ts . --ignore-pattern 'frontend/**'",
    "lint:fix": "npm run lint:sol -- --fix && npm run lint:ts -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.sol": [
      "prettier --write",
      "solhint"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "defi",
    "insurance",
    "blockchain",
    "smart-contracts",
    "ethereum",
    "polygon",
    "hedera",
    "pyth",
    "chainlink"
  ],
  "author": "OmniShield Team",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@eslint/js": "^9.37.0",
    "@hashgraph/hedera-wallet-connect": "^2.0.3",
    "@hashgraph/sdk": "^2.74.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@chainlink/contracts-ccip": "^1.6.2",
    "@openzeppelin/contracts": "^5.4.0",
    "@pythnetwork/pyth-sdk-solidity": "^4.2.0",
    "dotenv": "^17.2.3"
  }
}
