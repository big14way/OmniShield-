# OmniShield Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# Network Configuration
# ========================================

# Default network for deployments
NETWORK=sepolia

# ========================================
# Private Keys
# ========================================

# Deployment account private key (without 0x prefix)
# NEVER commit your actual private key!
PRIVATE_KEY=your_private_key_here

# ========================================
# RPC URLs
# ========================================

# Alchemy API Key (for Ethereum)
ALCHEMY_API_KEY=your_alchemy_api_key

# Hedera JSON-RPC endpoints
HEDERA_TESTNET_RPC=https://testnet.hashio.io/api
HEDERA_MAINNET_RPC=https://mainnet.hashio.io/api

# Hedera Operator (for SDK operations)
HEDERA_OPERATOR_ID=your_operator_id
HEDERA_OPERATOR_KEY=your_operator_key

# ========================================
# Block Explorer API Keys (for verification)
# ========================================

ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# ========================================
# Contract Addresses (after deployment)
# ========================================

INSURANCE_POOL_ADDRESS=
RISK_ENGINE_ADDRESS=
CLAIMS_PROCESSOR_ADDRESS=
PYTH_ORACLE_ADDRESS=
HEDERA_BRIDGE_ADDRESS=

# ========================================
# Multi-sig Configuration
# ========================================

# Multi-sig wallet address (Gnosis Safe)
MULTISIG_ADDRESS=

# Multi-sig owners (comma-separated)
MULTISIG_OWNERS=0xYourAddress1,0xYourAddress2,0xYourAddress3

# Minimum signatures required
MULTISIG_THRESHOLD=2

# ========================================
# Timelock Configuration
# ========================================

# Timelock delay in seconds (default: 2 days)
TIMELOCK_DELAY=172800

# ========================================
# Emergency Configuration
# ========================================

# Emergency guardian addresses (comma-separated)
EMERGENCY_GUARDIANS=0xYourAddress1,0xYourAddress2

# ========================================
# Monitoring Configuration
# ========================================

# Monitoring interval in milliseconds (default: 5 minutes)
MONITORING_INTERVAL=300000

# Enable continuous monitoring
CONTINUOUS_MONITORING=false

# ========================================
# Frontend Configuration
# ========================================

# Next.js Public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ========================================
# Build Configuration
# ========================================

# Skip deployment in build script
SKIP_DEPLOY=

# Deploy to public testnet
DEPLOY_TESTNET=

# ========================================
# Gas Configuration
# ========================================

# Enable gas reporting
REPORT_GAS=false

# Gas price in gwei
GAS_PRICE=

# Gas limit
GAS_LIMIT=
